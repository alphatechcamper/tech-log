<%= stylesheet_link_tag 'login.css', media: 'all' %>


<div class="login-container">
  <h2>ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :Eメール %><br />
      <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "input-field" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "checkbox" %>
        <%= f.label :記録を保持する, class: "checkbox-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "login-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
