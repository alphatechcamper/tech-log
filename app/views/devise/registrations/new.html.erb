<%= stylesheet_link_tag 'singup.css', media: 'all' %>
<div class="registration-container">
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :ユーザー名 %> <em>(６文字以内)</em><br />
      <%= f.text_field :nickname, autofocus: true, maxlength: "6", class: "input-field" %>
    </div>

    <div class="field">
      <%= f.label :Eメール %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
        <em>（半角英数字６文字以上）</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "input-field" %>
    </div>

    <div class="field">
      <%= f.label :パスワード再確認 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field" %>
    </div>

    <div class="actions">
      <%= f.submit "登録", class: "registration-button" %>
    </div>
  <% end %>

  <div class="links">
    <%= render "devise/shared/links" %>
  </div>
</div>

