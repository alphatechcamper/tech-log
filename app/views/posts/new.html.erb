<h1>新規投稿</h1>

<%= form_with model: @post, html: {class: "form-container"} do |form| %> 
<div class="form-input">
  <%= form.label :タイトル %> <%= form.text_field :title %>
</div>

<div class="form-input">
  <%= form.label :内容 %> <%= form.text_area :content %>
</div>

<div class="button-container"><%= form.submit "投稿" %></div>
<% end %>