<div class="user-profile">
  <% if @user.present? %>
    <p><%= current_user.nickname %>さんの投稿一覧</p>
  <% end %>

  <div class="user-posts">
  <% @posts.each do |post| %>
  <%= render partial: "posts/post", locals: { post: post } %>
  <% end %>

  <footer>
      <a href="/">戻る</a>
  </footer>

</div>